<div class="container">
<div class="row">
      <div class="col-7 pt-4">
        <h1><%= @place.name %></h1>
      </div>
      <div class="col-2 text-end pt-4">
        <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-success">New Post</a>
      </div>
      <div class="col-sm-3 text-end pt-4">
        <a href="/places" class="btn btn-success">Back to All Places</a>
      </div>
    </div>

<div class="row">
  <% for post in @place.posts.where({user_id: @current_user.id}) %>
  <div class="col-3">
    <h3><%= post.title %></h3>
    <h4><%= post.posted_on %></h4>
    <p><%= post.description %></p>
    <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
  <% end %>

</div>

